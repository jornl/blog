root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{tsx,jsx,js,ts}]
indent_size = 2
ij_typescript_force_quote_style = true
ij_typescript_use_double_quotes = true
ij_typescript_force_semicolon_style = true

[*.{yml,yaml}]
indent_size = 2

[docker-compose.yml]
indent_size = 4
